<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    
    <!-- 
    android:editable 是否可以编辑
    android:password 是否是密码显示
    android:phoneNumber 是否是数字，弹数字键盘
    android:lines 文本编辑框行数
    android:maxLines 最大行数
    android:minLines 最小行数
    android:hint="请输入xxx" 提示符
     -->
    <EditText 
        android:id="@+id/ae_et_test"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        />
    
    <EditText 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:phoneNumber="true"
        android:hint="请输入手机号码"
        android:text=""
        />
    
    <EditText 
        android:id="@+id/ae_et_pass"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:password="true"
        android:text=""
        />
    
    <EditText 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:selectAllOnFocus="true"
        android:text="选中我"
        />
    
    
    <EditText 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:selectAllOnFocus="true"
        android:hint="请输入0123456789-/这样的字符串"
        android:digits="0123456789-/"
        />
    
    <Button 
        android:id="@+id/ae_bn_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="显示"/>
    
    <Button 
        android:id="@+id/ae_bn_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="隐藏"/>

    
    
    
    
    

</LinearLayout>
