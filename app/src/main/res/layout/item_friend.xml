<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#33333333"
    android:orientation="horizontal"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/if_iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/u50" />

    <TextView
        android:id="@+id/if_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_toRightOf="@+id/if_iv_head"
        android:text="张三"
        android:textColor="#ff00ff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/if_tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/if_tv_name"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/if_iv_head"
        android:text="今天天气今天天气今天天气今天天气今天天气今天天气今天天气" />

    <TextView
        android:id="@+id/if_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/if_tv_name"
        android:text="今天12:30" />

    <LinearLayout
        android:id="@+id/if_ll_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/if_tv_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/if_iv_pic1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gift_icon_03" />

            <ImageView
                android:id="@+id/if_iv_pic2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gift_icon_03" />

            <ImageView
                android:id="@+id/if_iv_pic3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gift_icon_03" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/if_iv_pic4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gift_icon_03" />

            <ImageView
                android:id="@+id/if_iv_pic5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gift_icon_03" />

            <ImageView
                android:id="@+id/if_iv_pic6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gift_icon_03" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/if_iv_pic7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gift_icon_03" />

            <ImageView
                android:id="@+id/if_iv_pic8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gift_icon_03" />

            <ImageView
                android:id="@+id/if_iv_pic9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gift_icon_03" />
        </LinearLayout>
    </LinearLayout>
    
    
    <TextView
        android:id="@+id/if_tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/if_ll_mid"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:text="评论(13)" />
    
    <TextView
        android:id="@+id/if_tv_zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/if_ll_mid"
        android:layout_toLeftOf="@+id/if_tv_comment"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:text="赞(3)" />

</RelativeLayout>